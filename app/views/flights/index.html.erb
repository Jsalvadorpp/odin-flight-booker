<br>
<h2 class='text-center'>Current flights</h2>

<%= form_with(url: home_path, method: "get",class: 'container-fluid') do %>

    <h5 class='d-inline-block'>Origin airport</h5>
    <%= select_tag(:from_airport,
                    options_for_select(@airports),
                        include_blank: "Any",class: "custom-select filter w-25")%>
        
    <h5 class='d-inline-block'>Destiny airport</h5>
    <%= select_tag(:to_airport,
                    options_for_select(@airports),
                    include_blank: "Any",class: "custom-select filter w-25")%>

    <%= submit_tag("Search") %>
<% end %><br>

<table class="table table-striped table-dark">

    <tr>
        <th>Origin</th>
        <th>Destination</th>
        <th>Departure time</th>
        <th>Flight duration</th>
    </tr>
  
    <%= render @flights %>
     
</table>