<br>
<h2 class='text-center'>Current flights</h2>

<%= form_tag(home_path, method: "get",class: 'container-fluid') do %> 

    <div class='row'>

        <div class='col-4'>
            <h5>Origin airport</h5>
            <%= select_tag(:from_airport,
                    options_for_select(@airports),
                        include_blank: "Any",class: "custom-select")%>
        </div>

        <div class='col-4'>
            <h5>Destiny airport</h5>
            <%= select_tag(:to_airport,
                    options_for_select(@airports),
                    include_blank: "Any",class: "custom-select")%>
        </div>

        <div class='col-4 my-auto'>
            <h5>Departure time</h5>   
            <%= select_tag(:departure_time,
                    options_for_select(@flights_departure_time),
                    include_blank: "Any",class: "custom-select")%>       
        </div>

    </div>

    <div class='row my-2'>
        <%= submit_tag("Search",name: nil,class: "text-center col-8 offset-2 btn btn-primary") %>
    </div>

<% end %><br>

<table class="table table-striped table-dark">

    <tr>
        <th>Origin</th>
        <th>Destination</th>
        <th>Departure time</th>
        <th>Flight duration</th>
        <th></th>
    </tr>
  
    <%= render @flights %>
     
</table>